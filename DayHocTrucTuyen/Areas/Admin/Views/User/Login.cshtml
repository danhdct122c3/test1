@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    ViewBag.Title = "Đăng nhập quản trị viên";
    ViewBag.NoiDung = "Đây là page login dành cho quản trị viên";
}
@model DayHocTrucTuyen.Models.LoginModel

<div class="col-lg-5">
    <div class="we-login-register">
        <div class="form-title">
            <i class="fa fa-key"></i>Đăng nhập
            <span>Trang đăng nhập dành cho quản trị viên</span>
        </div>
        <form class="we-form" method="post" id="formLogin">
            <input type="email" id="emailLogin" maxlength="50" placeholder=" " autofocus required>
            <label class="label-input" id="lblemailLogin">Email</label>
            <input type="password" class="passInput" id="passLogin" maxlength="50" placeholder=" " required>
            <label class="label-input" id="lblpassLogin">Mật khẩu</label>
            <input type="checkbox" id="rememberLogin"><label style="padding-top: 0" for="rememberLogin">Nhớ đăng nhập</label>
            <input type="hidden" value="@Model.ReturnUrl" id="urlreturnLogin" />
            <div class="col-12 alert alert-danger" style="display: none" id="erroLogin">
                Lỗi đăng nhập !
            </div>
            <div class="g-recaptcha" data-sitekey="6Lfa65UqAAAAAFwmzxxfBrjAbPXzeaDJH-uGaZ0S"></div>
            <button type="submit" class="login-register" id="submitLogin" data-ripple="">Đăng nhập</button>
            <a class="forgot underline" href="/account/forgotpassword" title="">Quên mật khẩu?</a>
        </form>
